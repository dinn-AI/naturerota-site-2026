---
import Layout from '../../layouts/Layout.astro';
import { sanityClient, urlFor } from '../../lib/sanity';

// Buscar todos os posts do Sanity ordenados por data de publicação
const allPosts = await sanityClient.fetch(
  `*[_type == "post"] | order(publishedAt desc) {
    _id,
    title,
    slug,
    mainImage,
    excerpt,
    publishedAt,
    author->{
      name,
      image
    }
  }`
);

// Função para obter URL da imagem ou fallback
function getImageUrl(post: any): string {
  if (post.mainImage?.asset) {
    return urlFor(post.mainImage).width(800).height(600).url();
  }
  return '/IMG_5297.jpeg'; // Imagem fallback
}

// Função para obter URL da foto do autor
function getAuthorImageUrl(author: any): string | null {
  if (author?.image?.asset) {
    return urlFor(author.image).width(100).height(100).url();
  }
  return null;
}

// Função para formatar data em pt-BR
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  const day = date.getDate();
  const month = date.toLocaleDateString('pt-BR', { month: 'short' });
  const year = date.getFullYear();
  return `${day} ${month} ${year}`;
}

// Função para estimar tempo de leitura
function estimateReadTime(text: string): string {
  const wordsPerMinute = 200;
  const words = text?.length || 500; // Estimativa baseada em caracteres
  const minutes = Math.ceil(words / wordsPerMinute);
  return `${minutes} min`;
}

// Post em destaque (mais recente)
const featuredPost = allPosts[0] ? {
  category: "Van Life",
  title: allPosts[0].title,
  image: getImageUrl(allPosts[0]),
  slug: allPosts[0].slug.current
} : null;

// Próximos 4 posts em destaque
const otherFeaturedPosts = allPosts.slice(1, 5).map((post: any) => ({
  title: post.title,
  image: getImageUrl(post),
  slug: post.slug.current
}));

// Posts recentes (todos os demais)
const recentPosts = allPosts.slice(5).map((post: any) => ({
  title: post.title,
  description: post.excerpt || 'Leia este artigo incrível sobre nossa vida na estrada.',
  image: getImageUrl(post),
  author: post.author?.name || 'Renan Cavalheiro',
  authorImage: getAuthorImageUrl(post.author),
  readTime: estimateReadTime(post.excerpt),
  date: formatDate(post.publishedAt),
  category: "Van Life",
  slug: post.slug.current
}));

// Se não houver posts suficientes, mostrar mensagem
const hasPosts = allPosts.length > 0;
---

<Layout 
  title="Blog - Naturerota | Van Life Brasil e Viagens de Motorhome"
  description="Acompanhe nossos artigos sobre vida na estrada, construção de Kombi motorhome, roteiros de viagem e dicas práticas de Van Life no Brasil."
>
  <section class="py-8 md:py-16" style="background-color: #FFF8F2;">
    <div class="container mx-auto px-4">
      <div class="max-w-7xl mx-auto">
        
        {!hasPosts ? (
          <div class="text-center py-20">
            <h2 class="text-3xl font-serif font-semibold text-gray-900 mb-4">
              Nenhum post publicado ainda
            </h2>
            <p class="text-gray-600 text-lg mb-8">
              Em breve teremos conteúdo incrível sobre Van Life e viagens!
            </p>
            <a href="/" class="btn-primary">
              Voltar para Home
            </a>
          </div>
        ) : (
          <>
        <!-- Hero Section com Featured Post e Sidebar -->
        {featuredPost && (
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 lg:gap-8 mb-16 lg:items-stretch">
          <!-- Featured Post (8 colunas - maior) -->
          <div class="lg:col-span-8">
            <a href={`/blog/${featuredPost.slug}`} class="group block h-full">
              <article class="relative h-[350px] md:h-[420px] lg:h-full rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300">
                <img 
                  src={featuredPost.image} 
                  alt={featuredPost.title}
                  class="absolute inset-0 w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-700"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/30 to-transparent"></div>
                <div class="absolute bottom-0 left-0 right-0 p-6 md:p-8 lg:p-10">
                  <span class="inline-block px-3 md:px-4 py-1 md:py-1.5 bg-white rounded-full text-xs font-bold mb-3 md:mb-4 tracking-wide" style="color: #123A2B;">
                    {featuredPost.category.toUpperCase()}
                  </span>
                  <h1 class="text-xl md:text-2xl lg:text-3xl xl:text-4xl font-serif font-bold text-white leading-tight max-w-2xl">
                    {featuredPost.title}
                  </h1>
                </div>
              </article>
            </a>
          </div>

          <!-- Other Featured Posts Sidebar (4 colunas - menor) -->
          {otherFeaturedPosts.length > 0 && (
          <div class="lg:col-span-4 flex flex-col h-full">
            <div class="mb-5">
              <h2 class="text-lg md:text-xl font-sans font-bold text-gray-900">
                Outros destaques
              </h2>
            </div>
            <div class="flex flex-col justify-between space-y-4 flex-1">
              {otherFeaturedPosts.map((post: any) => (
                <a href={`/blog/${post.slug}`} class="group block">
                  <article class="flex gap-3 items-start">
                    <div class="flex-shrink-0 w-14 h-14 md:w-16 md:h-16 rounded-lg overflow-hidden bg-gray-200">
                      <img 
                        src={post.image} 
                        alt={post.title}
                        class="w-full h-full object-cover object-center group-hover:scale-110 transition-transform duration-300"
                      />
                    </div>
                    <div class="flex-1 min-w-0">
                      <h3 class="text-xs md:text-sm font-sans font-semibold text-gray-900 group-hover:text-[#123A2B] transition-colors leading-snug line-clamp-3">
                        {post.title}
                      </h3>
                    </div>
                  </article>
                </a>
              ))}
            </div>
          </div>
          )}
        </div>
        )}

        <!-- Recent Posts Section -->
        {recentPosts.length > 0 && (
        <div class="mb-16">
          <div class="mb-8">
            <h2 class="text-3xl md:text-4xl font-serif font-semibold" style="color: #123A2B;">
              Artigos Recentes
            </h2>
          </div>

          <!-- Posts Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
            {recentPosts.map((post: any) => (
              <a href={`/blog/${post.slug}`} class="group">
                <article class="bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300">
                  <!-- Imagem -->
                  <div class="relative h-44 md:h-48 overflow-hidden">
                    <img 
                      src={post.image} 
                      alt={post.title}
                      class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-500"
                    />
                    <span class="absolute top-3 left-3 px-3 py-1 bg-white/90 backdrop-blur-sm rounded-full text-xs font-semibold" style="color: #123A2B;">
                      {post.category}
                    </span>
                  </div>

                  <!-- Conteúdo -->
                  <div class="p-5">
                    <h3 class="text-lg font-serif font-semibold text-gray-900 mb-2 group-hover:text-[#123A2B] transition-colors line-clamp-2">
                      {post.title}
                    </h3>
                    <p class="text-gray-600 text-sm mb-4 line-clamp-2 leading-relaxed">
                      {post.description}
                    </p>

                    <!-- Meta Info -->
                    <div class="flex items-center justify-between pt-3 border-t border-gray-100">
                      <div class="flex items-center gap-2">
                        {post.authorImage ? (
                          <img 
                            src={post.authorImage} 
                            alt={post.author}
                            class="w-7 h-7 rounded-full object-cover"
                          />
                        ) : (
                          <div class="w-7 h-7 rounded-full bg-gradient-to-br from-[#123A2B] to-[#A4D0AF] flex items-center justify-center text-white text-xs font-bold">
                            {post.author.split(' ').map((n: string) => n[0]).join('')}
                          </div>
                        )}
                        <span class="text-xs text-gray-700 font-medium">
                          {post.author}
                        </span>
                      </div>
                      <span class="text-xs text-gray-500">
                        {post.readTime}
                      </span>
                    </div>
                  </div>
                </article>
              </a>
            ))}
          </div>
        </div>
        )}

        {allPosts.length > 6 && (
        <!-- Estatísticas do Blog -->
        <div class="text-center py-8">
          <p class="text-gray-600 text-lg">
            Mostrando {allPosts.length} {allPosts.length === 1 ? 'artigo' : 'artigos'} sobre Van Life e Viagens
          </p>
        </div>
        )}

        </>
        )}

      </div>
    </div>
  </section>
</Layout>

