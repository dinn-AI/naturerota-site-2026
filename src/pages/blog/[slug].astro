---
import Layout from '../../layouts/Layout.astro';
import { sanityClient, urlFor } from '../../lib/sanity';

// Gerar rotas estáticas para todos os posts
export async function getStaticPaths() {
  const posts = await sanityClient.fetch(
    `*[_type == "post"] {
      "slug": slug.current
    }`
  );
  
  return posts.map((post: any) => ({
    params: { slug: post.slug },
  }));
}

// Buscar o post pelo slug
const { slug } = Astro.params;

const post = await sanityClient.fetch(
  `*[_type == "post" && slug.current == $slug][0] {
    _id,
    title,
    slug,
    mainImage,
    excerpt,
    body,
    publishedAt,
    author->{
      name,
      image,
      bio
    },
    "relatedPosts": *[_type == "post" && slug.current != $slug] | order(publishedAt desc)[0...3] {
      _id,
      title,
      slug,
      mainImage,
      publishedAt,
      author->{
        name
      }
    }
  }`,
  { slug }
);

// Se não encontrar o post, retornar 404
if (!post) {
  return Astro.redirect('/404');
}

// Função para obter URL da imagem
function getImageUrl(image: any, width = 1200, height = 800): string {
  if (image?.asset) {
    return urlFor(image).width(width).height(height).url();
  }
  return '/IMG_5297.jpeg';
}

// Função para formatar data
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('pt-BR', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
}

// Função para formatar data curta
function formatDateShort(dateString: string): string {
  const date = new Date(dateString);
  const day = date.getDate();
  const month = date.toLocaleDateString('pt-BR', { month: 'short' });
  const year = date.getFullYear();
  return `${day} ${month}. ${year}`;
}

// Processar conteúdo do Sanity (body)
const bodyContent = post.body || [];
---

<Layout 
  title={`${post.title} - Blog Naturerota`}
  description={post.excerpt || `Leia sobre ${post.title} no blog da Naturerota`}
>
  <article class="min-h-screen" style="background-color: #FFF8F2;">
    <!-- Imagem de Capa -->
    <div class="relative w-full h-[400px] md:h-[500px] lg:h-[600px] overflow-hidden">
      <img 
        src={getImageUrl(post.mainImage, 1920, 1080)} 
        alt={post.title}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
      
      <!-- Título sobreposto na imagem -->
      <div class="absolute bottom-0 left-0 right-0 p-6 md:p-12">
        <div class="container mx-auto max-w-4xl">
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-serif font-bold text-white leading-tight mb-4">
            {post.title}
          </h1>
        </div>
      </div>
    </div>

    <!-- Conteúdo do Post -->
    <div class="container mx-auto px-4 py-12">
      <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-lg p-8 md:p-12">
        
        <!-- Meta Informações -->
        <header class="mb-10 border-b border-gray-200 pb-6">
          <div class="flex items-center gap-4 mb-4">
            {post.author?.image ? (
              <img 
                src={getImageUrl(post.author.image, 80, 80)} 
                alt={post.author.name}
                class="w-12 h-12 rounded-full object-cover"
              />
            ) : (
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-[#123A2B] to-[#A4D0AF] flex items-center justify-center text-white font-bold">
                {post.author?.name?.split(' ').map((n: string) => n[0]).join('') || 'N'}
              </div>
            )}
            <div>
              <p class="font-semibold text-gray-900">{post.author?.name || 'Naturerota'}</p>
              <p class="text-sm text-gray-500">
                Publicado em {formatDate(post.publishedAt)}
              </p>
            </div>
          </div>

          {post.excerpt && (
            <p class="text-lg text-gray-700 leading-relaxed italic">
              {post.excerpt}
            </p>
          )}
        </header>

        <!-- Conteúdo do Artigo -->
        <div class="prose prose-lg max-w-none">
          {bodyContent.map((block: any, blockIndex: number) => {
            // Processar blocos de texto
            if (block._type === 'block') {
              const style = block.style || 'normal';
              const children = block.children || [];
              const listItem = block.listItem;
              
              // Função para renderizar o conteúdo inline
              const renderChildren = () => {
                return children.map((child: any) => {
                  let content = child.text;
                  
                  if (child.marks && child.marks.length > 0) {
                    if (child.marks.includes('strong')) {
                      return <strong>{content}</strong>;
                    }
                    if (child.marks.includes('em')) {
                      return <em>{content}</em>;
                    }
                    if (child.marks.includes('underline')) {
                      return <u>{content}</u>;
                    }
                    if (child.marks.includes('code')) {
                      return <code class="bg-gray-100 px-2 py-1 rounded text-sm">{content}</code>;
                    }
                  }
                  
                  return content;
                });
              };
              
              // Renderizar listas
              if (listItem === 'bullet') {
                return (
                  <li class="text-gray-700 leading-relaxed mb-2">
                    {renderChildren()}
                  </li>
                );
              } else if (listItem === 'number') {
                return (
                  <li class="text-gray-700 leading-relaxed mb-2">
                    {renderChildren()}
                  </li>
                );
              }
              
              // Renderizar diferentes estilos de blocos
              if (style === 'h2') {
                return (
                  <h2 class="text-2xl md:text-3xl font-serif font-semibold mb-4 mt-8" style="color: #123A2B;">
                    {renderChildren()}
                  </h2>
                );
              } else if (style === 'h3') {
                return (
                  <h3 class="text-xl md:text-2xl font-serif font-semibold mb-3 mt-6" style="color: #123A2B;">
                    {renderChildren()}
                  </h3>
                );
              } else if (style === 'h4') {
                return (
                  <h4 class="text-lg md:text-xl font-serif font-semibold mb-2 mt-4" style="color: #123A2B;">
                    {renderChildren()}
                  </h4>
                );
              } else if (style === 'blockquote') {
                return (
                  <blockquote class="border-l-4 border-[#123A2B] pl-6 py-3 my-6 italic text-gray-700 bg-gray-50">
                    {renderChildren()}
                  </blockquote>
                );
              } else {
                // Parágrafo normal
                return (
                  <p class="text-gray-700 leading-relaxed mb-6">
                    {renderChildren()}
                  </p>
                );
              }
            }
            
            // Processar imagens do Sanity
            if (block._type === 'image') {
              const imageUrl = getImageUrl(block, 1200, 800);
              return (
                <figure class="my-8">
                  <img 
                    src={imageUrl} 
                    alt={block.alt || 'Imagem do artigo'}
                    class="w-full rounded-lg shadow-md"
                  />
                  {block.caption && (
                    <figcaption class="text-sm text-gray-500 text-center mt-2 italic">
                      {block.caption}
                    </figcaption>
                  )}
                </figure>
              );
            }
            
            return null;
          })}
        </div>

        <!-- Separador -->
        <div class="my-20 border-t border-gray-200"></div>

        <!-- Sobre o Autor -->
        {post.author && (
          <div class="bg-gray-50 rounded-xl p-6">
            <h3 class="text-lg font-semibold mb-4" style="color: #123A2B;">Sobre o Autor</h3>
            <div class="flex items-start gap-4">
              {post.author.image ? (
                <img 
                  src={getImageUrl(post.author.image, 80, 80)} 
                  alt={post.author.name}
                  class="w-16 h-16 rounded-full object-cover flex-shrink-0"
                />
              ) : (
                <div class="w-16 h-16 rounded-full bg-gradient-to-br from-[#123A2B] to-[#A4D0AF] flex items-center justify-center text-white font-bold text-xl flex-shrink-0">
                  {post.author.name.split(' ').map((n: string) => n[0]).join('')}
                </div>
              )}
              <div>
                <p class="font-semibold text-gray-900 mb-1">{post.author.name}</p>
                {post.author.bio && post.author.bio[0] && (
                  <p class="text-sm text-gray-600 leading-relaxed">
                    {post.author.bio[0].children?.map((child: any) => child.text).join('') || 'Viajante e criador de conteúdo sobre Van Life.'}
                  </p>
                )}
              </div>
            </div>
          </div>
        )}
      </div>

      <!-- Posts Relacionados -->
      {post.relatedPosts && post.relatedPosts.length > 0 && (
        <div class="max-w-4xl mx-auto" style="margin-top: 56px;">
          <!-- Header com título e botão -->
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-xl md:text-2xl font-sans font-semibold text-gray-900">
              Continue Lendo
            </h2>
            <a href="/blog" class="text-sm font-medium hover:underline" style="color: #123A2B;">
              Ver todos
            </a>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {post.relatedPosts.map((relatedPost: any) => (
              <a 
                href={`/blog/${relatedPost.slug.current}`}
                class="group"
              >
                <article class="space-y-3">
                  <div class="relative h-40 rounded-lg overflow-hidden bg-gray-100">
                    <img 
                      src={getImageUrl(relatedPost.mainImage, 400, 300)} 
                      alt={relatedPost.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    />
                  </div>
                  <h3 class="text-sm font-sans font-medium text-gray-900 group-hover:text-[#123A2B] transition-colors line-clamp-2 leading-snug">
                    {relatedPost.title}
                  </h3>
                  <p class="text-xs text-gray-500">
                    {formatDateShort(relatedPost.publishedAt)}
                  </p>
                </article>
              </a>
            ))}
          </div>
        </div>
      )}
    </div>
  </article>
</Layout>

